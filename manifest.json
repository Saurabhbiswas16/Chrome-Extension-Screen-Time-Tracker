{
  "manifest_version": 3,
  "name": "Screen Time Tracker",
  "description": "Track how much time you spend on each website and view daily usage in a clean dashboard.",
  "version": "1.0.0",

  "action": {
    "default_title": "Screen Time Tracker",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
